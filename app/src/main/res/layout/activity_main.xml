<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pantalla">

        <TableLayout
            android:id="@+id/tabPantalla"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/fondo">

            <TableRow>
                <TextView
                    android:layout_span="4"
                    android:layout_weight="10"
                    android:id="@+id/lblPantalla2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textColor="@color/letra2"
                    android:textSize="30sp"
                    android:background="@color/pantalla"
                    android:gravity="end" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_span="4"
                    android:id="@+id/lblPantalla1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="38sp"
                    android:textColor="@color/letra2"
                    android:textAlignment="textEnd"
                    android:background="@color/pantalla"
                    android:gravity="end" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnCE"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:text="CE"
                    android:textColor="@color/letra1"
                    android:textSize="20sp"
                    android:enabled="true"
                    android:onClick="borrar"/>

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/Fondobtn"

                    android:text="C"
                    android:textColor="@color/letra1"
                    android:textSize="20sp"
                    android:enabled="true"
                    android:onClick="borrar"/>

                <Button
                    android:id="@+id/btnBloqueo"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/Fondobtn"


                    android:text="Bloqueo"
                    android:textColor="@color/letra1"
                    android:textSize="16sp"
                    android:onClick="bloqueo"/>

                <ImageButton
                    android:id="@+id/ibtnBorrar"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/Fondobtn"


                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/flecha"
                    android:textColor="@color/letra1"
                    android:textSize="20sp"
                    android:enabled="true"
                    android:onClick="borrar"/>

            </TableRow>


            <TableRow>
                <Button
                    android:id="@+id/btnRaiz"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/Fondobtn"

                    android:text="√"
                    android:textSize="20sp"
                    android:textColor="@color/letra1"
                    android:onClick="raiz"/>

                <Button
                    android:id="@+id/btnCuadrado"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:text="X²"
                    android:textSize="20sp"

                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="cuadrado"/>

                <Button
                    android:id="@+id/btnPi"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:text="π"
                    android:textSize="20sp"

                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="tecla"/>

                <Button
                    android:id="@+id/btnEntre"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="/"
                    android:textSize="20sp"
                    android:backgroundTint="@color/fondoOperaciones"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="operacion"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="7"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:onClick="tecla"/>
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="8"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="tecla"/>
                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="9"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:onClick="tecla"/>

                <Button
                    android:id="@+id/btnPor"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="*"
                    android:textSize="20sp"
                    android:backgroundTint="@color/fondoOperaciones"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="operacion"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="4"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="tecla"/>

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="5"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="tecla"/>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="6"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="tecla"/>

                <Button
                    android:id="@+id/btnMas"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="+"
                    android:textSize="20sp"
                    android:backgroundTint="@color/fondoOperaciones"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="operacion"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="1"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="tecla"/>
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="2"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="tecla"/>

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="3"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="tecla"/>

                <Button
                    android:id="@+id/btnMenos"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="-"
                    android:textSize="20sp"
                    android:backgroundTint="@color/fondoOperaciones"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="operacion"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnSigno"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="±"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="Signo"/>
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="0"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:onClick="tecla"/>

                <Button
                    android:id="@+id/btnPunto"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="."
                    android:textSize="20sp"
                    android:backgroundTint="@color/Fondobtn"
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:onClick="punto"/>

                <Button
                    android:id="@+id/btnIgual"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/colorIgual"
                    android:onClick="Igual"
                    android:text="="
                    android:textColor="@color/letra1"
                    android:enabled="true"
                    android:textSize="20sp" />
            </TableRow>


        </TableLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>